<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom|center"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/pager_1"
        android:id="@+id/pager_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp" />

    <TextView
        android:id="@+id/pager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium_500"
        android:text="@string/find_your_favorite_course"
        android:textColor="@color/black1"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/pager_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/regular_400"
        android:text="@string/sub_label"
        android:textAlignment="center"
        android:textColor="@color/grey1"
        android:textSize="16sp" />
</LinearLayout>